extends ../layout_user

block content
    form.form-signin(method="post", action="/admin/users/login")
        
        h2.form-signin-heading 管理员登录
            small.pull-right
                a(href="/admin/users/register") 注册
        != messages()
        
        label.sr-only(for="email") Email address
        input.email.form-control(name="email", type="email", placeholder="Email address")

        label.sr-only(for="password") Password
        input.password.form-control(name="password", type="password", placeholder="Password")

        button.btn.btn-lg.btn-primary.btn-block(type="submit") 登录
