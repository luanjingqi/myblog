extends ../layout

append css
    link(rel='stylesheet',href='/css/blog.css')
    link(rel='stylesheet',href='/components/font-awesome//css/font-awesome.css')

block main
    block header
        .blog-masthead
            .container
                nav.blog-nav
                    if pageName === '/posts'
                        a.blog-nav-item.active(href="/") 首页
                    else
                        a.blog-nav-item(href="/") 首页
                    if pageName === '/about'
                        a.blog-nav-item.active(href="/about") 关于我
                    else
                        a.blog-nav-item(href="/about") 关于我
                    if pageName === '/contact'
                        a.blog-nav-item.active(href="/contact") 联系
                    else
                        a.blog-nav-item(href="/contact") 联系    
                    form.navbar-form.pull-right(method="get", action="/posts/")
                        input.form-control(type="text", name="keyword", placeholder="搜索....")
                

    .container
        .row
            .col-sm-8.blog-main
                != messages()
                block content
            .col-sm-3.col-sm-offset-1.blog-sidebar
                .sidebar-module.sidebar-module-inset
                    h4 关于我           
                    p
                      | 介绍
                      em 相关介绍
                      |  巴拉巴拉一大堆        
                .sidebar-module
                    h4 文章分类
                    ol.list-unstyled
                        each category in categories
                            li
                                a(href="/posts/category/" + category.name,target="_blank")=category.name
                .sidebar-module             
                    h4 相关链接             
                        ol.list-unstyled
                            li
                                a(href="http://github.com/") GitHub              
                            li
                                a(href="http://www.bootcss.com/") BootStrap                               
                            li
                                a(href="http://jquery.com/") JQuery
                            li
                                a(href="https://cn.vuejs.org/") Vue.js
                            li
                                a(href="http://nodejs.cn/") Node.js
                            li
                                a(href="http://www.w3school.com.cn/") W3cSchool
                            li
                                a(href="http://element-cn.eleme.io/#/zh-CN") Element.UI
                            li
                                a(href="http://npmjs.com/") NPM


    block footer
        footer.blog-footer
            p NodeBlog  By luanjingqi@126.com
            p
                a(href="#") 回到顶部
                &nbsp;&nbsp;&nbsp;&nbsp;
                a(href="/admin/users/login") 管理员登录
                &nbsp;&nbsp;&nbsp;&nbsp;
                a(href="/admin/users/register") 注册
